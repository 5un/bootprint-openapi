{{! renders a single method definition.}}
<div class="panel panel-method-{{method}}">
    <div class="panel-heading">
        <div class="method-summary">{{md summary "true"}}</div>
        <h3 class="panel-title"><span class="method-name">{{toUpperCase method}}</span> <strong>{{path}}</strong></h3>
    </div>
    <div class="panel-body">
        <section class="sw-method-description">
            {{md methodDef.description}}
        </section>
        {{>swagger/request-body}}
        {{>swagger/parameters}}
        {{>swagger/responses}}
        {{>swagger/security}}
    </div>
</div>