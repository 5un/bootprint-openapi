<div class="panel panel-method-{{method}}">
    <div class="panel-heading">
        <div class="method-summary">{{md methodDef.summary "true"}}</div>
        <h3 class="panel-title"><span class="method-name">{{toUpperCase method}}</span> <strong>{{path}}</strong></h3>
    </div>
    <div class="panel-body">
        {{md methodDef.description}}
        {{>parameters}}
        {{>responses}}
    </div>
</div>